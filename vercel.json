{
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/backend/index.js"
    },
    {
      "source": "/h/(.*)",
      "destination": "/client/nissmart/dist/index.js"
    }
  ],
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  }
}
